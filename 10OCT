        "#primero se solicita al usuario que introduzca los valores de los numeros en las listas en las que vamos a trabajar\n",
        "entrada_usuario = input(\"Introduce los valores de la lista de números separados por comas: \")\n",
        "#despues se introduce la entrada de los numeros en una lista\n",
        "numeros = [int(numero) for numero in entrada_usuario.split(',')]\n",
        "#creamos las dos listas de los numeros pares e impares, para despues introducir los valores resultantes de las operaciones que nos dicen si es uno u otro\n",
        "pares = []\n",
        "impares = []\n",
        "#separamos los numeros en pares o impares con la division entre dos con residuo cero o por el contrario numero impar\n",
        "for num in numeros:\n",
        "    if num % 2 == 0:\n",
        "        pares.append(num)\n",
        "    else:\n",
        "        impares.append(num)\n",
        "\n",
        "print(\"Los números pares son: \", pares)\n",
        "print(\"Los números impares son: \", impares)\n"
